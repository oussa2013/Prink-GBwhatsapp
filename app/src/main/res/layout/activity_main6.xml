<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity6">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Profile info"
        android:textColor="#138d7f"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:text="Please provide your name and an optional profile photo"
        android:textColor="#1F2020"
        android:textSize="18dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/regUserPhoto"
        android:layout_width="91dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="21dp"
        android:src="@drawable/use" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@id/regUserPhoto"
        android:hint="Type your name here"
        android:importantForAutofill="no"
        android:inputType="text" />
<!--
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/emojPhoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/emoj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.290"
        tools:ignore="MissingConstraints" />
        -->
    <Button
        android:id="@+id/btnNext6"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="142dp"
        android:background="#25d366"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        tools:ignore="MissingConstraints" />


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>